{
  "name": "Body Mode",
  "slug": "body-mode",
  "version": "1.0.3",
  "orientation": "default",
  "icon": "./assets/icon.png",
  "userInterfaceStyle": "dark",
  "newArchEnabled": false,
  "scheme": "bodymode",
  "description": "AI-powered health companion that creates personalized daily plans for nutrition, sleep, and fitness.",
  "githubUrl": "https://github.com/viperdam/bodymode",
  "splash": {
    "image": "./assets/splash-icon.png",
    "resizeMode": "contain",
    "backgroundColor": "#020617"
  },
  "ios": {
    "bundleIdentifier": "com.viperdam.bodymode",
    "supportsTablet": true,
    "buildNumber": "4",
    "googleServicesFile": "./GoogleService-Info.plist",
    "associatedDomains": [
      "applinks:bodymode.netlify.app",
      "webcredentials:bodymode.netlify.app"
    ],
    "infoPlist": {
      "NSCameraUsageDescription": "Body Mode uses your camera to analyze food and scan your fridge for recipe suggestions.",
      "NSMicrophoneUsageDescription": "Body Mode uses your microphone for voice input and sleep audio analysis.",
      "NSMotionUsageDescription": "Body Mode uses motion sensors to track sleep quality and detect your activity context.",
      "NSLocationAlwaysAndWhenInUseUsageDescription": "Body Mode uses your location in the background to keep inside/outside context accurate for sleep detection.",
      "NSLocationWhenInUseUsageDescription": "Body Mode uses your location to provide weather-aware health recommendations.",
      "NSPhotoLibraryUsageDescription": "Body Mode can analyze food photos from your gallery.",
      "NSHealthShareUsageDescription": "Body Mode reads your health data to personalize plans and insights.",
      "NSHealthUpdateUsageDescription": "Body Mode can write nutrition and activity summaries to your health data.",
      "UIBackgroundModes": [
        "audio",
        "fetch",
        "remote-notification",
        "processing",
        "location"
      ],
      "BGTaskSchedulerPermittedIdentifiers": [
        "com.bodymode.healthSync",
        "com.bodymode.planGeneration",
        "com.bodymode.sleepCheck"
      ]
    },
    "entitlements": {
      "com.apple.developer.usernotifications.time-sensitive": true,
      "com.apple.developer.healthkit": true,
      "com.apple.developer.healthkit.background-delivery": true
    }
  },
  "android": {
    "package": "com.viperdam.bodymode",
    "versionCode": 4,
    "googleServicesFile": "./google-services.json",
    "adaptiveIcon": {
      "foregroundImage": "./assets/adaptive-icon.png",
      "backgroundColor": "#020617"
    },
    "intentFilters": [
      {
        "action": "VIEW",
        "autoVerify": true,
        "data": [
          {
            "scheme": "bodymode"
          },
          {
            "scheme": "https",
            "host": "bodymode.netlify.app",
            "pathPrefix": "/link"
          }
        ],
        "category": [
          "BROWSABLE",
          "DEFAULT"
        ]
      }
    ],
    "edgeToEdgeEnabled": true,
    "permissions": [
      "android.permission.ACTIVITY_RECOGNITION",
      "android.permission.CAMERA",
      "android.permission.RECORD_AUDIO",
      "android.permission.ACCESS_FINE_LOCATION",
      "android.permission.ACCESS_COARSE_LOCATION",
      "android.permission.ACCESS_BACKGROUND_LOCATION",
      "android.permission.VIBRATE",
      "android.permission.RECEIVE_BOOT_COMPLETED",
      "android.permission.SCHEDULE_EXACT_ALARM",
      "android.permission.health.READ_HEART_RATE",
      "android.permission.health.READ_HEART_RATE_VARIABILITY",
      "android.permission.health.READ_OXYGEN_SATURATION",
      "android.permission.health.READ_BODY_TEMPERATURE",
      "android.permission.health.READ_BASAL_BODY_TEMPERATURE",
      "android.permission.health.READ_RESPIRATORY_RATE",
      "android.permission.health.READ_VO2_MAX",
      "android.permission.health.READ_BLOOD_GLUCOSE",
      "android.permission.health.READ_BASAL_METABOLIC_RATE",
      "android.permission.health.READ_BODY_FAT",
      "android.permission.health.READ_WEIGHT",
      "android.permission.health.READ_HYDRATION",
      "android.permission.health.READ_NUTRITION",
      "android.permission.health.READ_EXERCISE",
      "android.permission.health.READ_MENSTRUATION",
      "android.permission.health.READ_SLEEP",
      "android.permission.health.READ_STEPS",
      "android.permission.health.READ_DISTANCE",
      "android.permission.health.READ_ACTIVE_CALORIES_BURNED",
      "android.permission.READ_EXTERNAL_STORAGE",
      "android.permission.WRITE_EXTERNAL_STORAGE",
      "android.permission.POST_NOTIFICATIONS"
    ]
  },
  "plugins": [
    [
      "expo-camera",
      {
        "cameraPermission": "Body Mode uses your camera to analyze food and scan your fridge.",
        "microphonePermission": "Body Mode uses your microphone for voice input.",
        "recordAudioAndroid": true
      }
    ],
    [
      "expo-location",
      {
        "locationWhenInUsePermission": "Body Mode uses your location for weather-aware recommendations.",
        "locationAlwaysAndWhenInUsePermission": "Body Mode uses your location in the background to keep inside/outside context accurate for sleep detection."
      }
    ],
    [
      "expo-notifications",
      {
        "icon": "./assets/notification-icon.png",
        "color": "#06b6d4",
        "sounds": [
          "./assets/sounds/reminder.wav"
        ],
        "defaultChannel": "default"
      }
    ],
    "expo-sensors",
    "expo-secure-store",
    [
      "react-native-google-mobile-ads",
      {
        "androidAppId": "ca-app-pub-6928555061691394~3122418900",
        "iosAppId": "ca-app-pub-6928555061691394~6479359344"
      }
    ],
    "@react-native-firebase/app",
    "@react-native-firebase/crashlytics",
    "@react-native-firebase/auth",
    "@react-native-google-signin/google-signin"
  ],
  "extra": {
    "eas": {
      "projectId": "your-eas-project-id"
    }
  },
  "updates": {
    "fallbackToCacheTimeout": 0
  },
  "assetBundlePatterns": [
    "**/*"
  ],
  "react-native-google-mobile-ads": {
    "android_app_id": "ca-app-pub-6928555061691394~3122418900",
    "ios_app_id": "ca-app-pub-6928555061691394~6479359344"
  }
}
