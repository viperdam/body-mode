rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Users collection - each user can only access their own data
    match /users/{userId} {
      // Allow read/write only if the user is authenticated and accessing their own document
      allow read, write: if request.auth != null && request.auth.uid == userId;

      // Primary data model used by cloud sync
      match /plans/{date} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }

      match /wrapups/{date} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }

      match /logs/{logType} {
        allow read, write: if request.auth != null && request.auth.uid == userId;

        match /months/{monthKey} {
          allow read, write: if request.auth != null && request.auth.uid == userId;
        }
      }

      // Legacy collections kept for backward compatibility
      match /foodLogs/{date} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }

      match /activityLogs/{date} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }

      match /sleepLogs/{date} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }

      match /dailyPlans/{date} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }

      match /dailyWrapups/{date} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }

      match /moodLogs/{logId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }

      match /weightLogs/{logId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }

      match /savedMeals/{mealId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }
    }

    // Deny all other access by default
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
